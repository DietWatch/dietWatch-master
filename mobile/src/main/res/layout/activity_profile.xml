<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aib.dietwatch.ProfileActivity">

    <TextView android:text="DietWatch" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/tytul"
        android:layout_alignBottom="@+id/settingsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:text="Użytkownik: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tytul"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3" />

    <TextView android:text="Zapotrzebowanie: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView3"
        android:id="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj posiłek"
        android:id="@+id/button2"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userEmail"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/poleBMI"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/userEmail"
        android:layout_alignEnd="@+id/userEmail" />

    <TextView
        android:text="kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton" />

</RelativeLayout>
